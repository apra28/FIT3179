{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": {"text":"NBA Player Birth States ", "subtitle": "Percentage (%) of NBA players since 1950 born in each US State"},
  "width": 600,
  "height": 300,
  "data": {
    "url": "https://cdn.jsdelivr.net/npm/us-atlas@3/states-10m.json",
    "format": {"type": "topojson", "feature": "states"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/apra28/FIT3179/main/nba_map_data.csv"
        },
        "key": "birth_state",
        "fields": ["normalised count"]
      }
    }
  ],
  "projection": {"type": "albersUsa"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "normalised count",
      "type": "quantitative",
      "scale": {"type": "threshold",
                "domain": [2,4,8],
                "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]},
      "title": "% of Players"
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {
        "field": "normalised count",
        "type": "quantitative",
        "title": "% of Players"
      }
    ]
  },
  "config": {}
}

